{
  "manifest_version": 3,
  "name": "FillMyText: Local Form Filler",
  "version": "1.1",
  "description": "Securely save text snippets locally and auto-fill web form inputs to improve productivity.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "Images/icon16.png",
    "48": "Images/icon48.png",
    "128": "Images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "Images/icon16.png",
      "48": "Images/icon48.png",
      "128": "Images/icon128.png"
    }
  }
}
